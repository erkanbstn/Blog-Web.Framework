@model Varliklar.Somut.Admin
@{
    ViewBag.Title = "NewAdmin";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>New Admin</h2>
<div class="card radius-10">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div>
                <h5 class="mb-0">Add New Admin</h5>
            </div>
            <div class="font-22 ms-auto">
                <i class="bx bx-dots-horizontal-rounded"></i>
            </div>
        </div>
        <hr>
        @using (Html.BeginForm("NewAdmin", "AdminAdmin", FormMethod.Post))
        {
            <label>User Name</label>
            <br />
            <br />
            <input class="form-control" name="UserName" type="text" placeholder="Enter User Name." required />
            <br />
            <label>Password</label>
            <br />
            <br />
            <input class="form-control" name="Password" type="text" placeholder="Enter Password." required />
            <br />
            <input type="submit" value="Save Admin" class="btn btn-primary" />
        }
    </div>
</div>


