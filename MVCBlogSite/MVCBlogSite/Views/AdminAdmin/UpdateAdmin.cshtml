@model Varliklar.Somut.Admin
@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>Update Admin</h2>
<div class="card radius-10">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div>
                <h5 class="mb-0">Update Admin</h5>
            </div>
            <div class="font-22 ms-auto">
                <i class="bx bx-dots-horizontal-rounded"></i>
            </div>
        </div>
        <hr>
        @using (Html.BeginForm("UpdateAdmin", "AdminAdmin", FormMethod.Post))
        {
            @Html.TextBoxFor(b => b.AdminID, new { @type = "hidden" })
            <label>User Name</label>
            <br />
            <br />
            @Html.TextBoxFor(b => b.UserName, new { @class = "form-control", placeholder = "Enter User Name", required="required" })
            <br />
            <label>Password</label>
            <br />
            <br />
            @Html.TextBoxFor(b => b.Password, new { @class = "form-control", placeholder = "Enter Password", required = "required" })
            <br />
            <input type="submit" value="Save Admin" class="btn btn-primary" />
        }
    </div>
</div>
