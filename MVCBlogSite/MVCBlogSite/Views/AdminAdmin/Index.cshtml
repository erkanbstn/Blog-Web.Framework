@model IEnumerable<Varliklar.Somut.Admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<div class="card radius-10">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div>
                <h5 class="mb-0">Adminler</h5>
            </div>
            <div class="font-22 ms-auto">
                <i class="bx bx-dots-horizontal-rounded"></i>
            </div>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Admin ID</th>
                        <th>User Name</th>
                        <th>Password</th>
                        <th>Delete Action</th>
                        <th>Update Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.AdminID</td>
                            <td>@i.UserName</td>
                            <td>@i.Password</td>
                            <td>
                                <div class="btn btn-warning">
                                    <a href="~/AdminAdmin/DeleteAdmin/@i.AdminID">D</a>
                                </div>
                            </td>
                            <td>
                                <div class="btn btn-success">
                                    <a href="~/AdminAdmin/UpdateAdmin/@i.AdminID">U</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="~/AdminAdmin/NewAdmin" class="btn btn-info">Add New Admin</a>
        </div>
    </div>
</div>

