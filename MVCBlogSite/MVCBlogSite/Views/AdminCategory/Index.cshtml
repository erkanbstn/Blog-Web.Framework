@using Varliklar.Somut
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<div class="card radius-10">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div>
                <h5 class="mb-0">Kategoriler</h5>
            </div>
            <div class="font-22 ms-auto">
                <i class="bx bx-dots-horizontal-rounded"></i>
            </div>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Category ID</th>
                        <th>Category Name</th>
                        <th>Delete Action</th>
                        <th>Update Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.CategoryID</td>
                            <td>@i.CategoryName</td>
                            <td>
                                <div class="btn btn-warning">
                                    <a href="~/AdminCategory/DeleteCategory/@i.CategoryID">D</a>
                                </div>
                            </td>
                            <td>
                                <div class="btn btn-success">
                                    <a href="~/AdminCategory/UpdateCategory/@i.CategoryID">U</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <a href="~/AdminCategory/NewCategory" class="btn btn-info">Add New Category</a>
        </div>
    </div>
</div>
