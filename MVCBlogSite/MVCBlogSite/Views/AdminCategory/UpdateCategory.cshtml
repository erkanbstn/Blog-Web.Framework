@model Varliklar.Somut.Category
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h2>Update Category</h2>
<div class="card radius-10">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div>
                <h5 class="mb-0">Update Category</h5>
            </div>
            <div class="font-22 ms-auto">
                <i class="bx bx-dots-horizontal-rounded"></i>
            </div>

        </div>
        <hr>
        @using (Html.BeginForm("UpdateCategory", "AdminCategory", FormMethod.Post))
        {
            <label>Category ID</label>
            <br />
            <br />
            @Html.TextBoxFor(b => b.CategoryID, new { @class = "form-control", placeholder = "Enter Category ID", required = "required" })
            <br />
            <label>Category Name</label>
            <br />
            <br />
            @Html.TextBoxFor(b => b.CategoryName, new { @class = "form-control", placeholder = "Enter Category Name", required = "required" })
            <br />
            <input type="submit" value="Save Category" class="btn btn-primary" />
        }

    </div>
</div>

