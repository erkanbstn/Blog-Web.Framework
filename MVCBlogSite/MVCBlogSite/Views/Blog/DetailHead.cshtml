@model IEnumerable<Varliklar.Somut.Blog>
@foreach (var i in Model)
{
    <div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/MiniBlog/images/@i.BlogImage');">
        <div class="container">
            <div class="row same-height justify-content-center">
                <div class="col-md-12 col-lg-10">
                    <div class="post-entry text-center">
                        <span class="post-category text-white bg-success mb-3">Nature</span>
                        <h1 class="mb-4"><a href="#">@i.BlogTitle</a></h1>
                        <div class="post-meta align-items-center text-center">
                            <figure class="author-figure mb-0 mr-3 d-inline-block"><img src="~/MiniBlog/images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                            <span class="d-inline-block mt-1">@i.Author.AuthorName Tarafından</span>
                            <span>&nbsp;-&nbsp; @Convert.ToDateTime(i.BlogDate).ToString("dd/MMMM/yyyy")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}