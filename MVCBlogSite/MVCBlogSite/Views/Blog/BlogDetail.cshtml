
@{
    ViewBag.Title = "BlogDetail";
    Layout = "~/Views/Shared/_Vitrin.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>

    <div class="site-wrap">
        @Html.Action("DetailHead")
        <section class="site-section py-lg">
            <div class="container">
                <div class="row blog-entries element-animate">
                    <div class="col-md-12 col-lg-8 main-content">
                        @Html.Action("DetailContent")
                        <div class="pt-5">
                            @Html.Action("Comments")
                            <div class="comment-form-wrap pt-5">
                                <h3 class="mb-5">Leave a comment</h3>


                                @using (Html.BeginForm("BlogDetail", "Blog", FormMethod.Post))
                                {
                                    <div class="p-5 bg-light">
                                        <div class="form-group">
                                            <input type="hidden" class="form-control" name="BlogID" value="@ViewBag.bID">
                                            <label for="name">Name &amp; Surname *</label>
                                            <input type="text" class="form-control" name="UserName">
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email *</label>
                                            <input type="email" class="form-control" name="Mail">
                                        </div>
                                        <div class="form-group">
                                            <label for="message">Message *</label>
                                            <textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <input type="submit" value="Post Comment" class="btn btn-primary">
                                        </div>
                                    </div>
                                }


                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-4 sidebar">
                        @Html.Action("Bio")
                        @Html.Action("PopularPost")
                        @Html.Action("Categories")
                        @Html.Action("Tags")
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

