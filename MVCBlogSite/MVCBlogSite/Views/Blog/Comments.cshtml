@model IEnumerable<Varliklar.Somut.Comment>
<h3 class="mb-5">Comments</h3>
<ul class="comment-list">
    @foreach (var i in Model)
    {
        <li class="comment">
            <div class="vcard">
                <img src="~/MiniBlog/images/person_1.jpg" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@i.UserName</h3>
                <div class="meta">@Convert.ToDateTime(i.CommentDate).ToString("dd/MMMM/yyyy")</div>
                <p>@i.CommentText</p>
            </div>
        </li>
    }
</ul>
