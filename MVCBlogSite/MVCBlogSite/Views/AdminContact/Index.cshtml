@model IEnumerable<Varliklar.Somut.Contact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<div class="card radius-10">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div>
                <h5 class="mb-0">Mesajlar</h5>
            </div>
            <div class="font-22 ms-auto">
                <i class="bx bx-dots-horizontal-rounded"></i>
            </div>
        </div>
        <hr>
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Message ID</th>
                        <th>Name</th>
                        <th>SurName</th>
                        <th>Subject</th>
                        <th>Message</th>
                        <th>Delete Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.ContactID</td>
                            <td>@i.Name</td>
                            <td>@i.SurName</td>
                            <td>@i.Subject</td>
                            <td>@i.Message</td>
                            <td>
                                <div class="btn btn-warning">
                                    <a href="~/AdminContact/DeleteContact/@i.ContactID">D</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

