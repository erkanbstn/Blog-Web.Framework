
@{
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/CssDashBoard/dashtreme/vertical/assets/images/favicon-32x32.png" type="image/png" />
    <link href="~/CssDashBoard/dashtreme/vertical/assets/plugins/vectormap/jquery-jvectormap-2.0.2.css" rel="stylesheet" />
    <link href="~/CssDashBoard/dashtreme/vertical/assets/plugins/simplebar/css/simplebar.css" rel="stylesheet" />
    <link href="~/CssDashBoard/dashtreme/vertical/assets/plugins/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/CssDashBoard/dashtreme/vertical/assets/plugins/metismenu/css/metisMenu.min.css" rel="stylesheet" />
    <link href="~/CssDashBoard/dashtreme/vertical/assets/css/pace.min.css" rel="stylesheet" />
    <script src="~/CssDashBoard/dashtreme/vertical/assets/js/pace.min.js"></script>
    <link href="~/CssDashBoard/dashtreme/vertical/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/CssDashBoard/dashtreme/vertical/assets/css/bootstrap-extended.css" rel="stylesheet">
    <link href="~/CssDashBoard/dashtreme/vertical/assets/css/bootstrap-extended.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap" rel="stylesheet">
    <link href="~/CssDashBoard/dashtreme/vertical/assets/css/app.css" rel="stylesheet">
    <link href="~/CssDashBoard/dashtreme/vertical/assets/css/icons.css" rel="stylesheet">

    <title>MVC Blog Admin</title>
</head>

<body class="bg-theme bg-theme1">
    <div class="wrapper">
        <div class="sidebar-wrapper" data-simplebar="true">
            <div class="sidebar-header">
                <div>
                    <img src="~/CssDashBoard/dashtreme/vertical/assets/images/logo-icon.png" class="logo-icon" alt="logo icon">
                </div>
                <div>
                    <h4 class="logo-text">Admin</h4>
                </div>
                <div class="toggle-icon ms-auto">
                    <i class='bx bx-arrow-to-left'></i>
                </div>
            </div>
            <ul class="metismenu" id="menu">
                <li>
                    <a href="~/AuthorPanel/Index">
                        <div class="parent-icon">
                            <i class='bx bx-home-circle'></i>
                        </div>
                        <div class="menu-title">Profilim</div>
                    </a>
                </li>
                <li>
                    <a href="~/AuthorPanel/Bloglarim">
                        <div class="parent-icon">
                            <i class='bx bx-repeat'></i>
                        </div>
                        <div class="menu-title">Bloglarım</div>
                    </a>
                </li>
                <li>
                    <a href="~/AuthorPanel/LogOut">
                        <div class="parent-icon">
                            <i class='bx bx-diamond'></i>
                        </div>
                        <div class="menu-title">Çıkış Yap</div>
                    </a>
                </li>
            </ul>
        </div>

        <header>
            <div class="topbar d-flex align-items-center">
                <nav class="navbar navbar-expand">
                    <div class="mobile-toggle-menu">
                        <i class='bx bx-menu'></i>
                    </div>
                    <div class="search-bar flex-grow-1">
                        <div class="position-relative search-bar-box">
                            <input type="text" class="form-control search-control" placeholder="Type to search..."> <span class="position-absolute top-50 search-show translate-middle-y"><i class='bx bx-search'></i></span>
                            <span class="position-absolute top-50 search-close translate-middle-y"><i class='bx bx-x'></i></span>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

        <div class="page-wrapper">
            <div class="page-content">
                @RenderBody()
            </div>
        </div>
        <div class="overlay toggle-icon"></div>
        <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
        <footer class="page-footer">
            <p class="mb-0">Design By Erkan Bostan © 2021. All right reserved.</p>
        </footer>
    </div>


    <script src="~/CssDashBoard/dashtreme/vertical/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/js/jquery.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/simplebar/js/simplebar.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/metismenu/js/metisMenu.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/chartjs/js/Chart.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/vectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/vectormap/jquery-jvectormap-world-mill-en.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/jquery.easy-pie-chart/jquery.easypiechart.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/sparkline-charts/jquery.sparkline.min.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/jquery-knob/excanvas.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/plugins/jquery-knob/jquery.knob.js"></script>
    <script>
        $(function () {
            $(".knob").knob();
        });
    </script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/js/index.js"></script>
    <script src="~/CssDashBoard/dashtreme/vertical/assets/js/app.js"></script>
</body>
</html>
